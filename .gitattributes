# Auto detect text files and perform LF normalization
* text=auto

# Java files
*.java text diff=java linguist-language=Java
*.gradle text linguist-language=Gradle
*.gradle.kts text linguist-language=Gradle
*.properties text linguist-language=Properties
*.yml text linguist-language=YAML
*.yaml text linguist-language=YAML

# Documentation files - Explicitly mark as Markdown
*.md text linguist-language=Markdown linguist-detectable=true
*.txt text linguist-language=Text
*.rst text linguist-language=reStructuredText

# Configuration files
application*.yml text linguist-language=YAML
application*.yaml text linguist-language=YAML
application*.properties text linguist-language=Properties

# Scripts
*.sh text eol=lf linguist-language=Shell
*.bat text eol=crlf linguist-language=Batchfile

# Binary files
*.jar binary
*.war binary
*.ear binary
*.pdf binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Log files
*.log binary

# IDE files
.DS_Store binary
*.iml text linguist-language=XML
*.ipr text linguist-language=XML
*.iws text linguist-language=XML

# Build outputs
build/ export-ignore
target/ export-ignore
out/ export-ignore
.gradle/ export-ignore

# Language-specific settings for documentation
docs/**/*.md linguist-language=Markdown linguist-detectable=true
docs/**/*_ES.md linguist-language=Markdown linguist-detectable=true
docs/**/*_EN.md linguist-language=Markdown linguist-detectable=true

# Specific problematic files - Force Markdown detection with override
docs/CONEXION_API.md linguist-language=Markdown linguist-detectable=true linguist-documentation=true
docs/API_DOCUMENTATION.md linguist-language=Markdown linguist-detectable=true linguist-documentation=true
docs/MODULARIZATION_ROADMAP.md linguist-language=Markdown linguist-detectable=true linguist-documentation=true

# SQL files in documentation should be treated as text
*.sql text linguist-language=SQL

# Docker files
Dockerfile text linguist-language=Dockerfile
*.dockerfile text linguist-language=Dockerfile

# JSON files
*.json text linguist-language=JSON

# Force specific file detection regardless of content
**/CONEXION_API.md linguist-language=Markdown linguist-override=true
**/API_DOCUMENTATION.md linguist-language=Markdown linguist-override=true
